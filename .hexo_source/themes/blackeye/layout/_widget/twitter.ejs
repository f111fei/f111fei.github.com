<% if (theme.twitter.username){ %>
<%
  var extraClass = '';
  if (idx.current % 3 === 0) {
    extraClass += ' first';
    if (idx.current >= 3) {
      extraClass += ' newline';
    }
  }
%>
<div class="widget twitter<%= extraClass %>">
  <h3 class="title">
                <a href="http://twitter.com/<%= theme.twitter.username %>">@<%= theme.twitter.username %></a>'s Tweets
        </h3>
  <ul id="tweets"></ul>
</div>

<script type="text/javascript">
var twitter_stream = ['<%= theme.twitter.username %>', <%= theme.twitter.tweet_count %>, <%= theme.twitter.show_replies %>];
var moment_js_path = '<%- config.root %>js/moment.min.js';
</script>
<script src="<%- config.root %>js/twitter.js"></script>
<% } %>