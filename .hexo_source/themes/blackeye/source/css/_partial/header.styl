#header
  border-radius 6px 6px 0 0
  background #242424 linear-gradient(#363636, #242424)
  position relative
  padding 15px 30px 5px 30px
  border-bottom 1px solid #969696

  .title
    float left
    a
      color #C2C2C2

  .search
    float right
    input
      width 98%
      background-color rgba(0,0,0,0.10)
      -webkit-box-shadow 0 1px 0 rgba(255,255,255,0.24), 0 1px 6px rgba(0,0,0,0.45) inset
      box-shadow 0 1px 0 rgba(255,255,255,0.24), 0 1px 6px rgba(0,0,0,0.45) inset
      -webkit-border-radius 12px
      border-radius 12px
      border none
      padding 0.3em 0.5em
      color #c4c4c4
      font-size 0.95em
      font-family "Helvetica Neue", "Helvetica", Arial, sans-serif
      margin-top 0.2em

  .nav
    float right
    font-family font-title
    line-height 2.5em
    a
      color #C2C2C2
    ul
      list-style none
      margin 0
      li
        float left
        margin-left 26px

  h1
    margin 0
    padding 0
    font-size 24px
    font-weight normal
    line-height 1.2
    color #069
    text-shadow rgba(85, 85, 85, 0.9) 0 1px 0

  &.without-description h1
    margin 10px 0

  p
    margin 0
    color #61778B
    width 300px
    font-size 13px
    font-style italic