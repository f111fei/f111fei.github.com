#sidebar
  max-width 750px
  margin 0 auto
  padding 10px 0
  color #fff
  text-shadow rgba(0,0,0,0.25) 0 2px 0
  @media screen and (max-width: 600px)
    padding 5px 10px

  a
    color #fff

  .widget
    float left
    width 30%
    margin-left 5%
    word-wrap break-word
    @media screen and (max-width: 600px)
      float none
      width 100%
      margin-left 0

    &.first
      margin-left 0

    &.newline
      clear: both

    ul, ol, dl, li
      padding-bottom 3px
      list-style none


    .entry
      padding-left 2px

    .title
      padding 4px 2px
      font-size 22px
      font-weight normal
      border-bottom 1px solid #000
      box-shadow rgba(255,255,255,0.25) 0 1px 0
    .flickrlist
      img
        width 27%
        height 27%
        background-color #fff
        border-radius 0.3em
        border 3px #fff solid
        max-width 100%
        margin 3px
      span.caption
        display none
    .doubanlist
      margin-left: -10px;
      img
        width 95%
        height 95%
        background-color #fff
        border-radius 0.3em
        border 3px #fff solid
        max-width 100%
        margin 3px


    #tweets
      padding 0px
      small
        color #000000
        text-shadow 0px 1px 0px rgba(255, 255, 255, 0.25)
        display block

  .tag
    small
      margin-left 15px
      color #ccc
      &:before
        content '('
      &:after
        content ')'

  .tagcloud
    a
      margin-right 10px
      display inline-block